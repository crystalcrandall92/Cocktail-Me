      </div>
    </div>
  </nav>
  <!-- Full Page Intro -->
  <div class="view bg">
    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-light align-items-center">
      <!-- Content -->
      <div class="container">
        <div class="card">
          <div class="card-header text-center" style="border:none">
            <h2>Create a drink</h2>
          </div>
          <div class="card-body w-75">
            <form class="createdrink">
              <div class="form-group">
                <label for="drinkname">Drink Name</label>
                <input type="text" style="border:none" class="form-control" id="drinknameinput"
                  placeholder="Enter your drink name here">
              </div>
              <div class="spiritAdder">
              <div class="form-group">
                <label for="examplespirit1">Spirit 1</label>
                <input type="text" style="border:none" class="form-control" id="spirit1input"
                  placeholder="Enter 1st spirit here">
              </div>
              </div>
              <button class="add-spirit-btn">Add Another Spirit?</button>
              <div class="ingredientAdder">
              <div class="form-group">
                <label for="Enteringredient1">Ingredient</label>
                <input type="text" style="border:none" class="form-control" id="ingredient1input"
                  placeholder="Enter ingredient here">
              </div>
              </div>
              <button class="add-ingredient-btn">Add Another Ingredient?</button>
              <div class="form-group">
                <label for="Enterdirections">Directions</label>
                <input type="text" style="border:none" class="form-control" id="directionsinput"
                  placeholder="Enter directions here">
              </div>
              <button type="submit" style="border:thin" class="btn" id="createDrinkBtn"><i class="fa fa-plus"
                  aria-hidden="true"></i><strong>Create</strong></button>
            </form>
          </div>
        </div>
      </div>
    </div>
